pipeline {
    agent any

    stages {
        stage('GIT') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/hwafa/timesheetproject.git'
            }
        }
        
        stage('Compile Stage') {
            steps {
                sh 'mvn clean compile'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                // Commande pour analyser le code avec SonarQube
                sh 'mvn sonar:sonar'
            }
        }
    }
}
